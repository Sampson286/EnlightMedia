<!-- 标题栏 -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_title_fl"
    style="@style/main_view_title_style"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true" >

    <ImageView
        android:id="@+id/cbchot_main_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|left"
        android:layout_marginLeft="7dp"
        android:scaleType="fitCenter"
        android:src="@drawable/chexbox_drawable" />

    <LinearLayout
        android:id="@+id/main_title_group_buttons"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/main_title_fl_height"
        android:layout_gravity="right"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/main_title_button_history"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/chexbox_drawable" />

        <RelativeLayout
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical" >

            <ImageButton
                android:id="@+id/main_title_button_download"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@null"
                android:src="@drawable/chexbox_drawable" />

        </RelativeLayout>

        <ImageButton
            android:id="@+id/main_title_button_search"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/chexbox_drawable" />
    </LinearLayout>
</FrameLayout>