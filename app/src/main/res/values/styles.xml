<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--去掉标题栏并且全屏-->
    <style name="AppTheme.Fullscreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="TANCStyle" parent="@android:style/Theme.Dialog">
        <!-- 屏幕背景不变暗 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--对话框progress样式-->
    <style name="dialogProgressStyle">
        <item name="android:indeterminateDrawable">@drawable/anim_dialog_progress</item>
        <item name="android:minWidth">@dimen/dialog_progress_minWidth</item>
        <item name="android:maxWidth">@dimen/dialog_progress_maxWidth</item>
        <item name="android:minHeight">@dimen/dialog_progress_minHeight</item>
        <item name="android:maxHeight">@dimen/dialog_progress_maxHeight</item>
    </style>
</resources>
